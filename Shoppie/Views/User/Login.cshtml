@model Shoppie.DataAccess.Models.User

@{
    ViewData["Title"] = "Login";
}




<form asp-action="Login " class="form login">
    <h4>Login</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" >User name</label>
                <input asp-for="UserName"  />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordHash">Password</label>
                <input asp-for="PasswordHash"  />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <button type="submit" class="form_button">Login</button>
        </form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
