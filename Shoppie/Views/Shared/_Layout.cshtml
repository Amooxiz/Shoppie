<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shoppie</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shoppie.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
</head>
<body>
    <header class="header">
        <nav>          
            <ul >
                <li>                    
                    <a asp-area="" asp-controller="Home" asp-action="Index">Shoppie</a>
                </li>
                <li >
                    <a  asp-area="" asp-controller="Home" asp-action="Discount">Discounts</a>
                </li>
                <li>
                    <a  asp-area="" asp-controller="Home" asp-action="New">Recenlty added</a>
                </li>
                <li>
                    <partial name="_ManagmentPartial" />
                </li>
                <li>
                    <partial name="_LoginPartial" />
                </li>
                <li>
                    <a id="nav-cart" asp-controller="Home" asp-action="Cart">
                        <i class="bi bi-cart"></i><span> 0</span>
                    </a>
                </li>
            </ul>

        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-container">
        <nav>
            <div class="fotoer-sec">
                &copy; 2022 - Shoppie - 
                <a class="footer-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </nav>
        <nav>
            <div class="footer-section">
                <i class="bi bi-github"></i> 
                <a class="footer-link" href="https://github.com/fetus-elitus">
                    My Github
                </a>
            </div>
        </nav>
        <nav>
            <div class="footer-section">
                <a class="footer-link" href="https://microcorruption.com/map">Microc</a>
            </div>
        </nav>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
