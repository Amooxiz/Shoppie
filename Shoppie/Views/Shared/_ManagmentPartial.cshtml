@using Microsoft.AspNetCore.Identity
@using Shoppie.Business.Seeders.Enums;
@using Shoppie.DataAccess.Entities;

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User) && User.IsInRole(Roles.Administrator.ToString()))
{
    <li >
        <a asp-controller="Offer" asp-action="Management">Offers Control Panel</a>
    </li>   
    <li>
        <a asp-controller="Category" asp-action="Management">Categories Control Panel</a>
    </li>
    <li>
        <a asp-controller="AppUser" asp-action="Management">Users Control Panel</a>
    </li>
}
