@model IEnumerable<CategoryVM>

@{
    ViewData["Title"] = "Management";
}

<h3>Categories</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(modelItem => modelItem.Id)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => modelItem.Name)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => modelItem.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>
                    <p>@category.Id</p>
                </td>
                <td>
                    <p>@category.Name</p>
                </td>
                <td>
                    <p>@category.IsActive</p>
                </td>
                <td>
                    @if(category.IsActive)
                    {
                        <a asp-action="Disable" asp-route-id="@category.Id" class="btn btn-danger">Disable Category</a>
                    }
                    else
                    {
                        <a asp-action="Enable" asp-route-id="@category.Id" class="btn btn-primary">Enable Category</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
